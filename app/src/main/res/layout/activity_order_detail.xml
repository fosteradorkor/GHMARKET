<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="com.mirka.app.ghmarket.DB.User" />

        <variable
            name="order"
            type="com.mirka.app.ghmarket.DB.Order" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white.main"
        android:orientation="vertical"
        tools:context="com.mirka.app.ghmarket.activities.purchases.OrderDetailActivity">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_android_arrow_back" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/black.main"
                    android:padding="8dp"
                    android:text="ITEMS"
                    android:textColor="@color/white.main" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/black.main"
                    android:padding="8dp"
                    android:text="PAYMENT INFO"
                    android:textColor="@color/white.main" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/white.main"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Card number" />


                    <TextView
                        android:id="@+id/et_card_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selected_variation_bg"
                        android:padding="4dp"
                        android:text="************451" />

                    <android.support.v4.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Expiry" />

                            <TextView
                                android:id="@+id/et_expiry"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/selected_variation_bg"
                                android:inputType="textPersonName"
                                android:padding="4dp"
                                android:text="****" />
                        </LinearLayout>

                        <android.support.v4.widget.Space
                            android:layout_width="16dp"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CVC" />

                            <TextView
                                android:id="@+id/et_cvc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/selected_variation_bg"
                                android:inputType="number"
                                android:padding="4dp"
                                android:text="***" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white.main">


                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white.main">

                        <TableRow android:layout_margin="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/original_price" />

                            <TextView
                                android:id="@+id/tv_original_price"
                                android:text="@{String.valueOf(order.totalPrice)}" />

                        </TableRow>

                        <TableRow android:layout_margin="8dp">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/discount" />

                            <TextView
                                android:id="@+id/tv_discount"
                                android:text="@{String.valueOf(order.discountedPrice)}" />

                        </TableRow>

                        <TableRow android:layout_margin="8dp">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/shipping_ups" />

                            <TextView
                                android:id="@+id/tv_shipping"
                                android:text="@{String.valueOf(order.shipping)}" />

                        </TableRow>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.8dp"
                            android:background="@color/black.sub" />


                        <TableRow android:layout_margin="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/total_price"
                                android:textColor="@color/black.main"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_total"
                                android:text="@{order.discountedPrice > 0?String.valueOf(order.discountedPrice)  :String.valueOf(order.totalPrice) }" />

                        </TableRow>
                    </TableLayout>
                </FrameLayout>


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/black.main"
                    android:padding="8dp"
                    android:text="SHIPPING ADDRESS"
                    android:textColor="@color/white.main" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Name" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:padding="4dp"
                    android:text="@{user.name}"
                    android:textColor="@color/black.main"
                    android:textSize="16dp"
                    tools:text="Foster Mawuli" />


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>
</layout>
